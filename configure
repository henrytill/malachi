#!/bin/sh

set -e

CONFIG_TEST=

case "$(uname -s)" in
    MINGW64_NT*)
        CONFIG_TEST=config_test_windows.o
        ;;
    Darwin)
        CONFIG_TEST=config_test_macos.o
        ;;
    *)
        CONFIG_TEST=config_test_xdg.o
        ;;
esac

cat <<EOF >config.mk
TEST_OBJECTS += test/${CONFIG_TEST}
EOF
